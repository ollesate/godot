script/source = "extends VBoxContainer

signal onReady()
signal onUnready()
signal onInfoUpdated()

var swatchs = []
var ready = false

var playerName
var color

func _ready():
	for child in $VBoxContainer/HBoxContainer.get_children():
		var color = child.modulate
		child.connect(\"gui_input\", self, \"on_swatch_input\", [color])
	for child in $VBoxContainer/HBoxContainer2.get_children():
		var color = child.modulate
		child.connect(\"gui_input\", self, \"on_swatch_input\", [color])
	$MarginContainer/Button.connect(\"pressed\", self, \"onButtonPressed\")
	$LineEdit.connect(\"text_changed\", self, \"onTextChanged\")

func on_swatch_input(ev, color):
	if ev is InputEventMouseButton:
		if ev.pressed:
			$Tank.modulate = color
			self.color = color
			emit_signal(\"onInfoUpdated\", playerName, color)

func onButtonPressed():
	ready = !ready
	if ready:
		emit_signal(\"onReady\")
	else:
		emit_signal(\"onUnready\")

func onTextChanged(text):
	playerName = text
	emit_signal(\"onInfoUpdated\", playerName, color)"

