script/source = "extends Node2D

func getSpawn(number):
	for spawn in get_tree().get_nodes_in_group(\"spawns\"):
		if spawn.index == number:
			return spawn
	return null

func spawnSize():
	return get_tree().get_nodes_in_group(\"spawns\").size()

func _ready():
	syncPositions()

func syncPositions():
	var players = get_tree().get_nodes_in_group(\"players\")
	for player in players:
		syncPos(player)

func syncPos(player):
	var pos = getMapPos(player)
	player.position = $Background.map_to_world(pos) + $Background.cell_size / 2
	
func getPlayersInHole():
	var players = []
	for player in get_tree().get_nodes_in_group(\"players\"):
		var cellPos = getMapPos(player)
		if $Background.isHole(cellPos):
			players.append(player)
	return players

func isPlayerInHole(player):
	return $Background.isHole(getMapPos(player))

func getMapPos(player):
	return $Background.world_to_map(player.position)

func getCheckpoint(player):
	var mapPos = getMapPos(player)
	return $TileMap.checkpoints[mapPos] if $TileMap.checkpoints.has(mapPos) else null"

