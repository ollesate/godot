script/source = "extends Control

onready var button = $VBoxContainer/Button
onready var edit = $VBoxContainer/LineEdit
onready var colorPicker = $VBoxContainer/ColorPickerButton

func _ready():
	button.connect(\"pressed\", self, \"button_pressed\")
	$Network.connect(\"onGameStart\", self, \"Network_onGameStart\")
	
func button_pressed():
	var id = get_tree().get_network_unique_id()
	$Network.joinLobby(id, edit.text, colorPicker.color)

func Network_onGameStart():
	get_tree().change_scene(\"res://player_hand.tscn\")"

